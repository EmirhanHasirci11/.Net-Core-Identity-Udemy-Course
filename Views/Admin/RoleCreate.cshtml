@model IdentityUdemyCourse.ViewModels.RoleViewModel

@{
    ViewData["Title"] = "RoleCreate";
    Layout = "~/Views/Shared/_Admin_Layout_.cshtml";
}


<h4>Rol oluşturma sayfası</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="RoleCreate" met>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Rollere geri dön</a>
</div>

